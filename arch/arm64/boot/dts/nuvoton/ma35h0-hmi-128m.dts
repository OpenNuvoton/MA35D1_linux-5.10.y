/dts-v1/;

#include "ma35h0.dtsi"

/ {
	model = "Nuvoton MA35H0-HMI";

	chosen {
		bootargs = "root=/dev/mmcblk1p1 rootfstype=ext4 rw rootwait console=ttyS0,115200n8 rdinit=/sbin/init mem=128M";
	};

	reserved-memory {
		display_buf: display_buf@0 {
			reg = <0x0 0x84780000 0x0 0x1880000>; /* 24.5MiB */
			no-map;
		};
		vc8k_buf: vc8k_buf@0 {
                       reg = <0x0 0x86000000 0x0 0x1800000>; /* 24MiB */
			no-map;
		};
	};

	gpio_keys_test {
		compatible = "gpio-keys";
		status = "okay";
		autorepeat;
		botton0 {
			label = "Key Down";
			linux,code = <KEY_DOWN>;
			gpios = <&gpion 2 GPIO_ACTIVE_LOW>;
			wakeup-source;
		};
		button1{
			label ="Key Up";
			linux,code = <KEY_UP>;
			gpios = <&gpion 3 GPIO_ACTIVE_LOW>;
			wakeup-source;
		};
		botton2 {
			label = "Key Left";
			linux,code = <KEY_LEFT>;
			gpios = <&gpion 12 GPIO_ACTIVE_LOW>;
			wakeup-source;
		};
		button3 {
			label ="Key Right";
			linux,code = <KEY_RIGHT>;
			gpios = <&gpion 13 GPIO_ACTIVE_LOW>;
			wakeup-source;
		};
	};

	gpio_leds_test {
		compatible = "gpio-leds";
		status = "okay";
		led0 {
			label = "LED0";
			gpios = <&gpion 6 GPIO_ACTIVE_LOW>;
		};
		led1 {
			label = "LED1";
			gpios = <&gpion 7 GPIO_ACTIVE_LOW>;
		};
		led2 {
			label = "LED2";
			gpios = <&gpion 10 GPIO_ACTIVE_LOW>;
		};
	};

        volt0_sdhci1: regulator-volt0_sdhci1 {
		compatible = "regulator-gpio";
		regulator-name = "volt1_sdhci1";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <3300000>;
		gpios = <&gpion 11 GPIO_ACTIVE_HIGH>; /* PN11 */
		gpios-states = <0>;
		states = <1800000 0x1 3300000 0x0>;
		enable-active-high;
		regulator-boot-on;
        };
};

&mem {
	device_type = "memory";
	reg = <0x00000000 0x80000000 0 0x08000000>; /* DRAM space - 1, size : 128MB DRAM */
};

&ccap0 {
        status = "disabled";
	port {
		/* Parallel bus endpoint */
		ccap0_1: endpoint {
			remote-endpoint = <&hm1055_0>;
			hsync-active = <0>;     /* Active low */
			vsync-active = <0>;     /* Active low */
			pclk-sample = <1>;      /* Rising */
		};
	};
};

&i2c_gpio0 {
	status = "disabled";
	hm1055@24 {
		compatible = "himax,hm1055";
		reg = <0x24>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_ccap0>;
		clocks = <&clk CCAP0_GATE>;
		clock-names = "xclk";
		reset-gpios = <&gpiom 1 GPIO_ACTIVE_LOW>; /* PM1 */
		powerdown-gpios = <&gpiok 8 GPIO_ACTIVE_HIGH>; /* PK8 */
		port {
			hm1055_0: endpoint {
				remote-endpoint = <&ccap0_1>;
			};
		};
	};
};

&gmac0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_gmac0>;
};

&ehci0 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_hsusbh>;
};

&usb {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usb>;
};

&nand {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_nand>;
};

&sdhci0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_sdhci0>;
	disable-wp;
};

&sdhci1 {
	status = "okay";
	pinctrl-names = "sdhci_3V3","sdhci_1V8";
	pinctrl-0 = <&pinctrl_sdhci1_3_3V>;
	pinctrl-1 = <&pinctrl_sdhci1_1_8V>;
	bus-width = <4>;
	vqmmc-supply = <&volt0_sdhci1>;
	power-gpios = <&gpiok 9 GPIO_ACTIVE_LOW>; /* PK9 */
};

&epwm0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_epwm0>;
};

&adc0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_adc0>;
};

&i2c0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c0>;

	#address-cells = <1>;
	#size-cells = <0>;
	nau8822: nau8822@1a {
		compatible = "nuvoton,nau8822";
		reg = <0x1a> ;
		nuvoton,spk-btl;
	};
};

&uart6 {
	status = "disabled";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart6>;
};

&uart16 {
	status = "disabled";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart16>;
};

&i2s0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2s0>;
	powerdown-gpios = <&gpiom 6 GPIO_ACTIVE_HIGH>; /* PM6 */
};

&i2s_pcm {
	status = "okay";
};

&sound {
	status = "okay";
};

&qspi0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_qspi0>;
};

&spi1 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_spi1>;
};

&can0 {
	status = "disabled";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_can0>;
};

&display {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_display0>;
	memory-region = <&display_buf>;
	status = "okay";
};

&vc8k {
	memory-region = <&vc8k_buf>;
	debug_level = <1>;
	status = "okay";
};

